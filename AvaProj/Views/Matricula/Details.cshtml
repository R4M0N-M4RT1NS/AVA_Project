@model AvaProj.Models.Matricula

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-3">Detalhes</h1>

<h4>Matrícula</h4>
<hr/>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Usuario)</th>
            <th>@Html.DisplayNameFor(model => model.DisciplinaOfertada)</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(model => model.Usuario.Id)</td>
            <td>@Html.DisplayFor(model => model.DisciplinaOfertada.Id)</td>
        </tr>
    </tbody>
</table>
<div>
    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index" class="btn btn-primary">Voltar a Lista</a>
</div>
