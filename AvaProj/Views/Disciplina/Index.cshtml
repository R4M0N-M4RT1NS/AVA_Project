@model IEnumerable<AvaProj.Models.Disciplina>

@{
    ViewData["Title"] = "Disciplinas";
}

<h1 class="mb-3">Disciplinas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Disciplina</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Disciplina</th>
            <th>Código</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.Codigo
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
