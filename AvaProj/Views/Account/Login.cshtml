@model AvaProj.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            max-width: 450px;
            margin: 0 auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            margin-top: 80px;
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-header h2 {
                color: #343a40;
                font-weight: 600;
            }

        .login-icon {
            font-size: 3rem;
            color: #0d6efd;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            border: 1px solid #ced4da;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        .input-group {
            position: relative;
        }

        .input-group-text {
            background-color: transparent;
            border-right: none;
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        .input-group .form-control {
            border-left: none;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }

        .btn-primary {
            width: 100%;
            padding: 12px;
            font-weight: 600;
            border-radius: 8px;
            background-color: #16deb3;
            border: none;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: #47D598;
                transform: translateY(-2px);
            }

        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875rem;
        }

        .alert {
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .forgot-password {
            text-align: right;
            margin-bottom: 20px;
        }

            .forgot-password a {
                color: #6c757d;
                text-decoration: none;
                font-size: 0.9rem;
            }

                .forgot-password a:hover {
                    color: #0d6efd;
                }

        
    </style>
</head>
<body>
    <div class="container">
        <div class="login-container">
            <div class="login-header">
                <div class="login-icon">
                    <i class="fas fa-user-circle"></i>
                </div>
                <h2>Bem-vindo(a)</h2>
                <p class="text-muted">Entre com suas credenciais para acessar</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    Erro no login. Verifique usuário e senha.
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Identificador" class="form-label">Usuário</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input asp-for="Identificador" class="form-control" placeholder="Digite seu usuário" />
                    </div>
                    <span asp-validation-for="Identificador" class="invalid-feedback d-block"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Senha" class="form-label">Senha</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Senha" type="password" class="form-control" placeholder="Digite sua senha" />
                    </div>
                    <span asp-validation-for="Senha" class="invalid-feedback d-block"></span>
                </div>

                <div class="form-group forgot-password">
                    <a href="#">Esqueceu sua senha?</a>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="LembrarMe" class="form-check-input" />
                        <label asp-for="LembrarMe" class="form-check-label">Lembrar de mim</label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Entrar
                    </button>
                </div>

            </form>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Script para alternar visibilidade da senha
        document.addEventListener('DOMContentLoaded', function() {
            const togglePasswordVisibility = () => {
                const passwordInput = document.querySelector('input[asp-for="Senha"]');
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
            };

            // Adicionar o botão de mostrar/ocultar senha
            const passwordGroup = document.querySelector('input[asp-for="Senha"]').parentNode;
            const toggleButton = document.createElement('button');
            toggleButton.type = 'button';
            toggleButton.className = 'btn btn-outline-secondary';
            toggleButton.innerHTML = '<i class="fas fa-eye"></i>';
            toggleButton.style.position = 'absolute';
            toggleButton.style.right = '10px';
            toggleButton.style.top = '50%';
            toggleButton.style.transform = 'translateY(-50%)';
            toggleButton.style.zIndex = '10';
            toggleButton.style.border = 'none';
            toggleButton.style.background = 'transparent';
            toggleButton.addEventListener('click', togglePasswordVisibility);

            passwordGroup.style.position = 'relative';
            passwordGroup.appendChild(toggleButton);
        });
    </script>
</body>
</html>