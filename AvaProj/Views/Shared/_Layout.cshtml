<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AvaProj</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AvaProj.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        :root {
            --anhembi-primary: #2E8B57;
            --anhembi-secondary: #3CB371;
            --anhembi-accent: #3CB371;
            --anhembi-light: #F5F5F5;
            --anhembi-dark: #004d00;
            --anhembi-link: #2E8B57;
            --anhembi-link-hover: #1D5D38;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--anhembi-light);
        }

        .navbar {
            background-color: white !important;
            border-bottom: 4px solid var(--anhembi-primary) !important;
        }

        .navbar-brand {
            color: var(--anhembi-secondary) !important;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .nav-link {
            color: var(--anhembi-secondary) !important;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: var(--anhembi-primary) !important;
        }

        .nav-item {
            margin-right: 8px;
        }

        .btn-primary {
            background-color: var(--anhembi-primary);
            border-color: var(--anhembi-primary);
        }

        .btn-primary:hover {
            background-color: var(--anhembi-link-hover);
            border-color: var(--anhembi-link-hover);
        }

        .btn-logout {
            background-color: var(--anhembi-secondary);
            color: white;
            border: none;
        }

        .btn-logout:hover {
            background-color: var(--anhembi-dark);
            color: white;
        }

        footer {
            background-color: var(--anhembi-secondary);
            color: white !important;
            padding: 1rem 0;
            margin-top: 2rem;
        }

        footer a {
            color: var(--anhembi-light) !important;
        }

        footer a:hover {
            color: white !important;
            text-decoration: underline;
        }

        .container {
            padding: 2rem 1rem;
        }

        h1, h2, h3, h4, h5, h6 {
            color: var(--anhembi-secondary);
        }

        a {
            color: var(--anhembi-link);
        }

        a:hover {
            color: var(--anhembi-link-hover);
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
            background-color: var(--anhembi-secondary) !important;
            color: white !important;
            border-top: none !important;
        }



        /* Cor padrão dos links do menu sanduíche */
        .dropdown-menu .dropdown-item {
            color: var(--anhembi-secondary); /* ou substitua por uma cor ex: #006400 */
        }

        /* Cor ao passar o mouse */
        .dropdown-menu .dropdown-item:hover {
            color: white;
            background-color: var(--anhembi-primary);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <h3>
                        <b>ANHEMBI MORUMBI</b>
                    </h3>
                    <h4>
                        Sorocaba
                    </h4>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="padding: 1px;">
                <ul class="navbar-nav flex-grow-1">
                        <!-- Menu Sanduíche (direita) -->
                        <li class="nav-item dropdown ms-auto">
                            <a class="nav-link dropdown-toggle" href="#" id="menuUsuario" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-list"></i> Menu
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="menuUsuario">
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
                                </li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @if (User.IsInRole("Professor"))
                                    {
                                        <li class="nav-item">
                                            <a class="dropdown-item" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                                        </li>
                                    }

                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <li class="nav-item">
                                            <a class="dropdown-item" asp-area="" asp-controller="Disciplina" asp-action="Index">Disciplina</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="dropdown-item" asp-area="" asp-controller="DisciplinaOfertada" asp-action="Index">Disciplina Ofertada</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="dropdown-item" asp-area="" asp-controller="Matricula" asp-action="Index">Criar Matrícula</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="dropdown-item" asp-area="" asp-controller="Professor" asp-action="Index">Cadastrar Professor</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Registrar Usuário</a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Aluno"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Avaliacao" asp-action="Index">Avaliações</a>
                                        </li>
                                    }
                                    <li>
                                        <a class="dropdown-item text-danger" asp-area="" asp-controller="Account" asp-action="Logout">Sair</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Entrar</a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container" style="padding: 1px;">
            &copy; 2025 - AvaProj | Anhembi Morumbi
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
