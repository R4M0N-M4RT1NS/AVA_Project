        :root {
            /* Novas cores em tons de verde */
            --anhembi-primary: #2E8B57; /* Verde mar */
            --anhembi-secondary: #006400; /* Verde escuro */
            --anhembi-accent: #3CB371; /* Verde médio mar */
            --anhembi-light: #F5F5F5; /* Branco gelo */
            --anhembi-dark: #004d00; /* Verde muito escuro */
            --anhembi-link: #2E8B57; /* Verde mar para links */
            --anhembi-link-hover: #1D5D38; /* Verde mar escuro para hover */
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--anhembi-light);
        }

        .navbar {
            background-color: white !important;
            border-bottom: 4px solid var(--anhembi-primary) !important;
        }

        .navbar-brand {
            color: var(--anhembi-secondary) !important;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .nav-link {
            color: var(--anhembi-secondary) !important;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: var(--anhembi-primary) !important;
            }

        .nav-item {
            margin-right: 8px;
        }

        .btn-primary {
            background-color: var(--anhembi-primary);
            border-color: var(--anhembi-primary);
        }

            .btn-primary:hover {
                background-color: var(--anhembi-link-hover);
                border-color: var(--anhembi-link-hover);
            }

        .btn-logout {
            background-color: var(--anhembi-secondary);
            color: white;
            border: none;
        }

            .btn-logout:hover {
                background-color: var(--anhembi-dark);
                color: white;
            }

        footer {
            background-color: var(--anhembi-secondary);
            color: white !important;
            padding: 1rem 0;
            margin-top: 2rem;
        }

            footer a {
                color: var(--anhembi-light) !important;
            }

                footer a:hover {
                    color: white !important;
                    text-decoration: underline;
                }

        .container {
            padding: 2rem 1rem;
        }

        h1, h2, h3, h4, h5, h6 {
            color: var(--anhembi-secondary);
        }

        a {
            color: var(--anhembi-link);
        }

            a:hover {
                color: var(--anhembi-link-hover);
            }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
            background-color: var(--anhembi-secondary) !important;
            color: white !important;
            border-top: none !important;
        }
    </style>
</head>
