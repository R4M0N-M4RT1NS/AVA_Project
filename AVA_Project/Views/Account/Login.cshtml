@model AvaProj.ViewModels.LoginViewModel

@{
    Layout = null; // Não usar o layout principal
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Login - AvaProj</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        body{
            padding: 0;
            margin: 0;
            width: 100vw;
            height: 100vh;
        }
        
        .login-page {
            display: flex;
            width: 100%;
            height: 100%;
            max-height: 100vh;
            max-width: 100vw;
        }

        .login-form-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: white;
        }

        .login-box {
            width: 100%;
            max-width: 400px;
            padding: 20px;
            border-radius: 16px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .login-box h2 {
            width: 100%;
            margin-bottom: 1.5rem;
            color: var(--anhembi-secondary);
            text-align: center;
            display:flex;
            flex-direction:column;
            align-content:center;
            text-align:left;
        }

        .form-control {
            width: 93%;
            border-radius: 8px;
            padding: 0.75rem;
        }

        .btn-login {
            width: 100%;
            padding: 0.75rem;
            border-radius: 8px;
            background-color: var(--anhembi-primary);
            color: white;
            font-weight: bold;
            border: none;
            transition: background-color 0.3s ease;
        }

        .btn-login:hover {
            background-color: var(--anhembi-link-hover);
        }

        .login-image-container {
            width:100%;
            height:100%;
            flex: 1;
            background-color: var(--anhembi-primary);
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-image-container img {
            max-width: 100%;
            max-height: 100%;
            height: auto;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-check {
            margin-bottom: 1.5rem;
        }

        .form-control {
            width: 100%;
            border-radius: 8px;
            padding: 0.75rem;
            box-sizing: border-box;
        }

        .text-danger {
            margin-bottom: 1rem;
            display: block;
        }

        @@media (max-width: 768px) {
            .login-page {
                flex-direction: column;
            }

            .login-image-container {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="login-page">
        <div class="login-form-container">
            <div class="login-box">
                <h2>Faça seu login</h2>

                @if (!ViewData.ModelState.IsValid) {
                    <div class="text-danger mb-3">Erro no login. Verifique usuário e senha.</div>
                }

                <form asp-action="Login" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Identificador">E-mail ou Usuário</label><br />
                        <input asp-for="Identificador" class="form-control" placeholder="seu@email.com" />
                        <span asp-validation-for="Identificador" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Senha">Senha</label><br />
                        <input asp-for="Senha" type="password" class="form-control" placeholder="sua senha" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="LembrarMe" class="form-check-input" />
                        <label asp-for="LembrarMe" class="form-check-label">Lembrar de mim</label>
                    </div>

                    <button type="submit" class="btn btn-login">Entrar</button>
                </form>

                <div class="mt-3 text-center">
                    <small>Não tem conta ainda? <a asp-action="Register">Crie agora</a></small>
                </div>
            </div>
        </div>

        <div class="login-image-container">
            <img src="~/img/login-illustration.png" alt="Login Illustration" />
        </div>
    </div>
</body>
</html>
