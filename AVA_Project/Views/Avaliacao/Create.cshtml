@model AvaProj.ViewModels.AvaliacaoViewModel

@{
    ViewData["Title"] = "Avaliar Disciplina";
}

<h1>@ViewData["Title"]</h1>

<h4>Disciplina: @Model.DisciplinaNome</h4>
<h5>Professor: @Model.ProfessorNome</h5>

<hr />

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="MatriculaId" />

    <div class="form-group">
        <label asp-for="Nota" class="control-label"></label>
        <input asp-for="Nota" class="form-control" />
        <span asp-validation-for="Nota" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comentario" class="control-label"></label>
        <textarea asp-for="Comentario" class="form-control"></textarea>
        <span asp-validation-for="Comentario" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Recomendaria" class="form-check-input" />
        <label asp-for="Recomendaria" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Enviar Avaliação</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
